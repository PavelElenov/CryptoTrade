<section class="crypto-market">
    <h1><span>Crypto</span> Trade</h1>
    {{#if cryptos}}
    {{#each cryptos}}
     <div class="offer-list">
        <div class="coin">
            <div class="coin-img">
                <img src="{{image}}">
            </div>
            <div class="coin-info">
                <h1>{{name}}</h1>
                <p><span>Price: </span>${{price}}</p>
                <p><span>Payment: </span>{{paymentMethod}}</p>
            </div>

            <a href="/details/{{_id}}" class="btn-details">Details</a>
        </div>

    </div>
    {{/each}}
   
    {{else}}
    <div class="no-offer">
        <p>There are no crypto offers found!</p>
    </div>
    {{/if}}
</section>