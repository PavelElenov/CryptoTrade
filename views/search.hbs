<section class="crypto-search">
    <h1>Search</h1>

    <form class="search-form" action="/search" method="post">
        <input type="text" class="search-coin" name="cryptoName" placeholder="Search here...">
        <select id="payment" name="paymentMethod">
            <option value="crypto-wallet">Crypto Wallet</option>
            <option value="credit-card">Credit Card</option>
            <option value="debit-card">Debit Card</option>
            <option value="paypal">PayPal</option>
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>
    {{#if cryptos}}
    {{#each cryptos}}
    <div class="search-result">
        <div class="search-list">
            <div class="coin">
                <div class="coin-img">
                    <img src="{{image}}">
                </div>
                <div class="coin-info">
                    <h1>{{name}}</h1>
                    <p><span>Price: </span>${{price}}</p>
                    <p><span>Payment: </span>{{paymentMethod}}</p>
                </div>

                <a href="/details/{{_id}}" class="btn-details">Details</a>
            </div>
        </div>

    </div>
    {{/each}}
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>